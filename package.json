{
  "name": "dragonrsense",
  "displayName": "DragonRSense",
  "description": "Where code stops being numbers and becomes meaning.",
  "version": "0.0.1",
  "publisher": "MagyGames",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dragonrsense.hello",
        "title": "DragonRSense: Hello"
      }
    ],
     "configuration": {
    "title": "DragonRSense",
    "properties": {
      "dragonrsense.enableCoordinates": {
        "type": "boolean",
        "default": true,
        "description": "Enable hover helpers for x and y coordinates"
      },
      "dragonrsense.enableSizes": {
        "type": "boolean",
        "default": true,
        "description": "Enable hover helpers for w and h (width and height)"
      },
      "dragonrsense.enableSpriteHover": {
        "type": "boolean",
        "default": false,
        "description": "Enable sprite path hover preview"
      },
      "dragonrsense.enableDecorations": {
        "type": "boolean",
        "default": false,
        "description": "Enable visual decorations (icons) in the editor"
      }
    }
  }
} 

